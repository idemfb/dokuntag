# ===========================
# DATABASE
# ===========================
DB_PROVIDER=sqlite
DATABASE_URL=file:./prisma/dev.db

# ===========================
# ENVIRONMENT
# ===========================
NODE_ENV=development
JWT_SECRET=dev-secret-key-change-in-production-minimum-32-characters!
APP_NAME=Dokuntag One
APP_URL=http://localhost:3000
BASE_URL=http://localhost:3000

# ===========================
# RATE LIMITING
# ===========================
CLAIM_RATE_LIMIT_MAX=10
CLAIM_RATE_LIMIT_WINDOW=60000
SCAN_RATE_LIMIT_MAX=20
SCAN_RATE_LIMIT_WINDOW=60000

# ===========================
# CORS
# ===========================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ===========================
# LOGGING
# ===========================
LOG_LEVEL=info

# ===========================
# TEST / DEBUG
# ===========================
TEST_UID_PREFIX=test-
ENABLE_TEST_TOKENS=true
SCAN_COOLDOWN_MS=5000
CLAIM_COOLDOWN_MS=10000

# ===========================
# SECURITY
# ===========================
PASSWORD_HASH_SALT_ROUNDS=12
HASH_ALGORITHM=bcrypt
TOKEN_EXPIRY=1h