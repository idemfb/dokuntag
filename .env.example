# -----------------
# DATABASE
# -----------------
# Development with SQLite
DATABASE_URL="file:./prisma/dev.db"

# Optional: PostgreSQL for dev/test
# DATABASE_URL="postgresql://postgres:yourpassword@localhost:5432/dokuntag_dev?schema=public"

# -----------------
# ENVIRONMENT
# -----------------
NODE_ENV="development"

# -----------------
# JWT AUTHENTICATION
# -----------------
JWT_SECRET="dev-secret-key-change-in-production-minimum-32-characters!"

# -----------------
# RATE LIMITING
# -----------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Scan endpoint limits
SCAN_RATE_LIMIT_MAX=20
SCAN_RATE_LIMIT_WINDOW=60000

# Claim endpoint limits
CLAIM_RATE_LIMIT_MAX=10
CLAIM_RATE_LIMIT_WINDOW=60000

# -----------------
# LOGGING
# -----------------
LOG_LEVEL="info"

# -----------------
# API
# -----------------
API_BASE_URL="http://localhost:3000"

# -----------------
# SECURITY
# -----------------
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
ALLOW_INTERNAL_HEADERS="true"

# -----------------
# OPTIONAL: DATABASE FOR TESTING WITH POSTGRES
# -----------------
# TEST_DATABASE_URL="postgresql://postgres:yourpassword@localhost:5432/dokuntag_test?schema=public"